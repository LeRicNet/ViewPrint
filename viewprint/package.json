        "test": "vitest",
        "test:ui": "vitest --ui",
        "lint": "eslint resources/js --ext .js,.jsx --fix",
        "format": "prettier --write 'resources/js/**/*.{js,jsx,json}'"
    },
    "devDependencies": {
        "@alpinejs/collapse": "^3.13.5",
        "@alpinejs/focus": "^3.13.5",
        "@alpinejs/persist": "^3.13.5",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "@vitejs/plugin-vue": "^5.0.3",
        "alpinejs": "^3.13.5",
        "autoprefixer": "^10.4.17",
        "axios": "^1.6.7",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-alpinejs": "^1.3.2",
        "laravel-vite-plugin": "^1.0.1",
        "postcss": "^8.4.33",
        "prettier": "^3.2.4",
        "tailwindcss": "^3.4.1",
        "vite": "^5.0.12",
        "vitest": "^1.2.2"
    },
    "dependencies": {
        "@niivue/niivue": "^0.61.0",
        "lodash": "^4.17.21",
        "eventemitter3": "^5.0.1",
        "file-saver": "^2.0.5",
        "hotkeys-js": "^3.13.6"
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "printWidth": 100
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "browser": true,
            "es2022": true,
            "node": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:alpine/recommended",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2022,
            "sourceType": "module"
        },
        "globals": {
            "Alpine": "readonly",
            "Livewire": "readonly"
        },
        "rules": {
            "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
            "no-console": ["warn", { "allow": ["warn", "error"] }]
        }
    }
}
